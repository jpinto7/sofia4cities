{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Demo Twitter Streaming",
	"type": "object",
	"required": [
		"Tweet"
	],
	"properties": {
		"Tweet": {
			"type": "string",
			"$ref": "#/datos"
		}
	},
	"datos": {
		"description": "Info Tweet",
		"type": "object",
		"required": [
			"tweet_id",
			"tweet_creatdat",
			"tweet_source",
			"tweet_text",
			"tweet_user_id",
			"tweet_user_screenname",
			"tweet_user_name",
			"tweet_user_profileimage",
			"tweet_favoritecount",
			"tweet_retweetcount"
		],
		"properties": {
			"timestamp": {
                        "type": "object",
                        "properties": {
                            "$date": {
                                "type": "string",
                                "format": "date-time"
                            }
                        }
                    },
			"geometry": {
				"type": "object",
				"properties": {
					"coordinates": {
						"type": "object",
						"properties": {
							"latitude": {
								"type" : "number"
							} ,
							"longitude": {
								"type" : "number"
							}
							
						}
					},
					"type": {
						"type": "string"
					}
				}
			},
			"tweet_id": {
				"type": "string"
			},
			"tweet_creatdat": {
                        "type": "object",
                        "properties": {
                            "$date": {
                                "type": "string",
                                "format": "date-time"
                            }
                        }
                    },
			"tweet_source": {
				"type": "string"
			},
			"tweet_text": {
				"type": "string"
			},
			"tweet_user_id": {
				"type": "string"
			},
			"tweet_user_screenname": {
				"type": "string"
			},
			"tweet_user_name": {
				"type": "string"
			},
			"tweet_user_profileimage": {
				"type": "string"
			},
			"tweet_favoritecount": {
				"type": "string"
			},
			"tweet_retweetcount": {
				"type": "string"
			}
		},
		"additionalProperties": false
	}
}