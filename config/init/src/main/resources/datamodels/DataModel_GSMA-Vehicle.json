{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "GSMA-Vehicle",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "type": {
            "type": "string"
        },
        "vehicleType": {
            "type": "string"
        },
        "category": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "location": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "coordinates": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                }
            },
            "required": [
                "type",
                "coordinates"
            ]
        },
        "name": {
            "type": "string"
        },
        "speed": {
            "type": "integer"
        },
        "cargoWeight": {
            "type": "integer"
        },
        "serviceStatus": {
            "type": "string"
        },
        "serviceProvided": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "areaServed": {
            "type": "string"
        },
        "refVehicleModel": {
            "type": "string"
        },
        "vehiclePlateIdentifier": {
            "type": "string"
        }
    },
    "required": [
        "id",
        "type",
        "vehicleType",
        "category",
        "location",
        "name",
        "speed",
        "cargoWeight",
        "serviceStatus",
        "serviceProvided",
        "areaServed",
        "refVehicleModel",
        "vehiclePlateIdentifier"
    ]
}