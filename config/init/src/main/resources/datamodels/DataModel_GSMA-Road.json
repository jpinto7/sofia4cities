{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "GSMA-Road",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "type": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "alternateName": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "roadClass": {
            "type": "string"
        },
        "length": {
            "type": "integer"
        },
        "refRoadSegment": {
            "type": "array",
